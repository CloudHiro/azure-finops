{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "automationAccountName": {
            "type": "string",
            "metadata": {
                "description" : "automation account name..."
            }

        }

    },


    "resources" : [
        {
            "apiVersion": "2019-06-01",
            "type": "Microsoft.Automation/automationAccounts/runbooks",
            "name": "[concat(parameters('automationAccountName'), '/tag_deallocated')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "description": "a runbook to tag all deallocated disks",
                "runbookType": "PowerShell",
                "logProgress": false,
                "logVerbose": true,
                "publishContentLink": {
                    "uri": "https://removebex.blob.core.windows.net/adh/TagDeallocatedVmsAndDisks.ps1?sp=r&st=2021-07-26T09:39:19Z&se=2021-07-26T17:39:19Z&spr=https&sv=2020-08-04&sr=b&sig=WGosGI1OWKfcrmKjPu1563OmP5YnrhUHvl1iptz%2BYQI%3D",
                    "version": "1"
                }
            }
        }
    ]
}
